#include "shell.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

/**
 * main - Main block
 * Return: 0
 */

int main(void)
{
        size_t n = 0;
        char *buf = NULL;

        printf("$");
        getline(&buf, &n, stdin);
        printf("%s", buf);
        printf("Buffer size: %ld\n", n);

        free(buf);
        return (0);
}

